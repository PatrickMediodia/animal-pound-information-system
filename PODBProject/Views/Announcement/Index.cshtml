@using System.Linq;
@using System.Data.Entity;

@model  IEnumerable<PODBProject.Announcement>

@{
    ViewBag.Title = "Announcements";
    Layout = "~/Views/Shared/_sideBarLayout.cshtml";
}
<center>
    <div class="d-flex justify-content-center">
        <div class="container">
            <div class="jumbotron col-sm-10" style="padding-top:10px; padding-bottom:10px;">
                <h2>Announcements</h2>
                @Html.ActionLink("Create Announcement", "Create")
            </div>
        </div>
        </div>
    </center>
        @if (Model != null)
        {
            foreach (var item in Model.Reverse())
            {
                <div class="d-flex justify-content-center">
                    <div class="jumbotron col col-md-10">
                        <center><img src="@Html.DisplayFor(modelItem => item.Image.imagePath)" style="height:250px;width:250px;" multiple /></center>
                        <div class"row lg-8">
                            <div class="col-md-12" style="margin-top:30px;">

                                <h3>@Html.DisplayFor(modelItem => item.announceTitle)</h3>
                                <div class="col-md-6">
                                    <small>@item.announceDate.ToString("dddd, dd MMMM yyyy")</small>
                                </div>
                            </div>
                        </div>
                        <div style="margin-top:20px">
                            @Html.DisplayFor(modelItem => item.announceText)
                        </div>
                        <div style="margin-top:20px">

                        </div>
                        @Html.ActionLink("Edit", "Edit", new { id = item.announceId }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.announceId })
                    </div>
                </div>

            }
        }

