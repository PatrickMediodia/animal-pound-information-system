@model PODBProject.Models.PetOwnerProfile

@using (Html.BeginForm("PetOwnerProfile", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="container">
            <div class="d-flex justify-content-center">
                <div class="jumbotron col-md-7">
                    <center><h4>User Details</h4></center>
                    <div class="form-group">
                        @Html.LabelFor(model => model.FullName, htmlAttributes: new { @class = "control-label col-md-6" })
                        @Html.EditorFor(model => model.FullName, new { htmlAttributes = new { @class = "form-control col-sm-12" } })
                        @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-row">
                        <div class="form-group col-sm-6">
                            @Html.LabelFor(model => model.ContactNumber, htmlAttributes: new { @class = "control-label col-md-12" })
                            @Html.EditorFor(model => model.ContactNumber, new { htmlAttributes = new { @class = "form-control col-md-12" } })
                            @Html.ValidationMessageFor(model => model.ContactNumber, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-sm-6">
                            @Html.LabelFor(model => model.Gender, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-sm-12">
                                @Html.DropDownList("Gender", new List<SelectListItem> {
                                           new SelectListItem { Text = "Male" , Value="Male"},
                                           new SelectListItem { Text = "Female" , Value = "Female" },
                                           }, "-- Select Gender -- ", htmlAttributes: new { @class = "control-label col-md-12" })
                            </div>

                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Street, htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.EditorFor(model => model.Street, new { htmlAttributes = new { @class = "form-control control-label col-md-12" } })
                        @Html.ValidationMessageFor(model => model.Street, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            @Html.LabelFor(model => model.Subdivision, htmlAttributes: new { @class = "control-label col-md-6" })
                            @Html.EditorFor(model => model.Subdivision, new { htmlAttributes = new { @class = "form-control col-md-12" } })
                            @Html.ValidationMessageFor(model => model.Subdivision, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-md-6">
                            @Html.LabelFor(model => model.Barangay, htmlAttributes: new { @class = "control-label col-md-6" })
                            <div class="col-md-12">
                                @Html.DropDownList("Barangay", new List<SelectListItem> {
                                    new SelectListItem { Text = "Aplaya" , Value="Aplaya"},
                                    new SelectListItem { Text = "Balibago" , Value = "Balibago" },
                                    new SelectListItem { Text = "Caingin" , Value="Caingin"},
                                    new SelectListItem { Text = "Dila" , Value = "Dila" },
                                    new SelectListItem { Text = "Dita" , Value="Dita"},
                                    new SelectListItem { Text = "Don Jose" , Value = "Don Jose" },
                                    new SelectListItem { Text = "Ibaba" , Value="Ibaba"},
                                    new SelectListItem { Text = "Kanluran" , Value = "Kanluran" },
                                    new SelectListItem { Text = "Labas" , Value="Labas"},
                                    new SelectListItem { Text = "Macabling" , Value = "Macabling" },
                                    new SelectListItem { Text = "Malitlit" , Value="Malitlit"},
                                    new SelectListItem { Text = "Malusak" , Value = "Malusak" },
                                    new SelectListItem { Text = "Market Area" , Value="Market Area"},
                                    new SelectListItem { Text = "Pooc" , Value = "Pooc" },
                                    new SelectListItem { Text = "Pulong Santa Cruz" , Value="Pulong Santa Cruz"},
                                    new SelectListItem { Text = "Santo Domingo" , Value = "Santo Domingo" },
                                    new SelectListItem { Text = "Sinalhan" , Value="Sinalhan"},
                                    new SelectListItem { Text = "Tagapo" , Value = "Tagapo" },
                                    }, "-- Select Barangay -- ", htmlAttributes: new { @class = "control-label col-md-12" })
                            </div>
                        </div>
                    </div>
                    <p><small>Note: If you dont live inside a Subdivision leave it blank</small></p>

                    <p>Profile Picture</p>
                    <input type="file" name="file" required>
                    <center><button type="submit" class="btn btn-primary" style="margin-bottom:20px">Submit</button></center>
                </div>
            </div>
        </div>
    </div>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
